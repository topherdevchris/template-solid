<!-- Overlay -->
<div data-menu-overlay class="fixed inset-0 bg-black/30 opacity-0 pointer-events-none transition-opacity duration-200 md:hidden"></div>

<!-- Panel -->
<aside
  id="mobile-menu"
  data-menu-panel
  class="fixed top-0 right-0 h-dvh w-80 max-w-[85vw] bg-white border-l border-line shadow-xl translate-x-full transition-transform duration-200 md:hidden"
  aria-hidden="true"
>
  <div class="h-16 flex items-center justify-between px-4 border-b border-line">
    <span class="font-semibold">Menu</span>
    <button class="inline-flex items-center justify-center w-10 h-10 rounded-md border border-line hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-primary/40"
            onClick="window.__closeMenu && window.__closeMenu()">
      <span class="sr-only">Close menu</span>
      <!-- X icon -->
      <svg width="20" height="20" viewBox="0 0 20 20" aria-hidden="true">
        <path d="M4 4l12 12M16 4L4 16" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
    </button>
  </div>

  <nav class="p-4 grid gap-2">
    <a class="px-3 py-2 rounded-md hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-primary/30" href="/">Home</a>
    <a class="px-3 py-2 rounded-md hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-primary/30" href="/generic">Generic</a>
    <a class="px-3 py-2 rounded-md hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-primary/30" href="/elements">Elements</a>
    <a class="px-3 py-2 rounded-md bg-primary text-white font-medium hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-primary/40" href="#contact">Contact</a>
  </nav>
</aside>
