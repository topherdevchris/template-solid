---
const { title, subtitle, ctaText, ctaHref = "#", secondaryText, secondaryHref = "#" } = Astro.props;
---

<section class="bg-[var(--hero-bg,theme(colors.slate.50))]">
  <div class="mx-auto max-w-6xl px-6 py-24 text-center">
    <h1 class="text-4xl md:text-6xl font-extrabold tracking-tight mb-4">{title}</h1>
    {subtitle && <p class="text-lg md:text-xl text-muted max-w-3xl mx-auto mb-8">{subtitle}</p>}

    <div class="flex items-center justify-center gap-4">
      {ctaText && (
        <a href={ctaHref} class="inline-block px-6 py-3 rounded-md bg-primary text-white font-semibold hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-primary/50">
          {ctaText}
        </a>
      )}
      {secondaryText && (
        <a href={secondaryHref} class="inline-block px-6 py-3 rounded-md border border-line text-text hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-primary/30">
          {secondaryText}
        </a>
      )}
    </div>
  </div>
</section>
