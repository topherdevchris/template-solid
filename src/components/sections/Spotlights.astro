---
import SpotlightItem from "../ui/SpotlightItem.astro";
const { items = [] } = Astro.props;
---

<section class="bg-white">
  <div class="mx-auto max-w-6xl px-6 py-16 space-y-16">
    {items.map((it, i) => (
      <SpotlightItem
        image={it.image}
        title={it.title}
        body={it.body}
        href={it.href}
        reverse={i % 2 === 1}
      />
    ))}
  </div>
</section>
