# .editorconfig - Studio Zero defaults
root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown: don't strip trailing spaces (they can be intentional for line breaks)
[*.md]
trim_trailing_whitespace = false
